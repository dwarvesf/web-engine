{
  "name": "websites-engine",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter=@wse/app run dev",
    "build": "pnpm --filter=@wse/app run build",
    "start": "pnpm --filter=@wse/app run start",
    "lint": "pnpm --filter=@wse/app run lint",
    "lint:fix": "pnpm --filter=@wse/app run lint:fix",
    "format": "pnpm --filter=@wse/app run format",
    "themes:build": "pnpm -r --filter='./packages/themes/*' run build",
    "themes:dev": "pnpm -r --filter='./packages/themes/*' run dev",
    "themes:clean": "pnpm -r --filter='./packages/themes/*' run clean",
    "themes:lint": "pnpm -r --filter='./packages/themes/*' run lint",
    "themes:format": "pnpm -r --filter='./packages/themes/*' run format",
    "themes:type-check": "pnpm -r --filter='./packages/themes/*' run type-check",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "packages/app/**/*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix",
      "pnpm format"
    ],
    "packages/themes/**/*.{js,jsx,ts,tsx}": [
      "pnpm themes:lint",
      "pnpm themes:format"
    ]
  }
}
